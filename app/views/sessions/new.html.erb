<h1>Login</h1>

<% if flash[:error] %>
  <div class="error"><%= flash["error"]%></div>
<%end%>


<%= form_tag '/login' do  %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>
<%end%>

<%= button_to "sign up", {:controller => "users", :action=> "new"}, :method => :get%>